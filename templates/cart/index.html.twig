{% extends 'base.html.twig' %}

{% block title %}Корзина{% endblock %}

{% block body %}
<section class="container py-5">
    <div>
        <h1>Корзина</h1>

        {% if items|length > 0 %}
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Товар</th>
                        <th>Изображение</th>
                        <th>Цена</th>
                        <th>Количество</th>
                        <th>Итого</th>
                        <th></th>
                    <tr>
                </thead>
                <tbody>
                {% for item in items  %}
                    <tr>
                        <td>{{item.product.name}}</td>
                        <td>
                            <img src={{item.product.image}} alt={{item.product.name}} class="w-25" >
                        </td>
                        <td>{{item.product.price}} р.</td>
                        <td>{{item.quantity}}</td>
                        <td>{{item.quantity * item.product.price}} р.</td>
                        <td>
                            <a href="{{path('app_cart_remove', {'id' : item.product.id} )}}" class="btn btn-danger btn-sm">
                                Удалить
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end">Итого : </td>
                        <td>{{total}} р.</td>
                        <td>
                            <a href="{{path('app_checkout')}}" class="btn btn-success btn-sm">
                                Оплатить
                            </a>
                        </td>
                    </tr>
                </tfoot>
            </table>
        {% else %}
            <h3>Корзина пуста</h3>
            <a href="{{path('app_products')}}" class="btn btn-success btn-sm">
                Перейти к товарам
            </a>
        {% endif %}
    </div>
</section>

{% endblock %}
