{% extends 'base.html.twig' %}

{% block title %}E-SHOP | Главная{% endblock %}

{% block body %}
<style>
.category-container {
  position: relative;
}

.overlay {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100%;
  width: 100%;
  opacity: 0;
  transition: .5s ease;
  background-color: black;
}

.category-container:hover .overlay {
  opacity: 0.8;
}

.text {
  color: white;
  font-size: 30px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}
</style>

<main>

    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    
        <div class="carousel-inner" style="height:450px">
        
            <div class="carousel-item active">
            <img src="https://images.wallpaperscraft.ru/image/single/razvody_kraska_zhidkost_144876_3840x2400.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
            <img src="https://kalix.club/uploads/posts/2022-12/1671443855_kalix-club-p-temnaya-abstraktsiya-oboi-instagram-1.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
            <img src="https://images.wallpaperscraft.ru/image/single/razvody_raznotsvetnyj_temnyj_149273_3840x2400.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            
        </button>
    </div>

    <section class="container">
        <h1 class="text-center py-5">Добро пожаловать в магазин!</h1>

        <h1>Категории товаров</h1>
        <article class="row">
        {% for category in categories %}
            <div class="col-sm-6 category-container">                
                <img class="w-100 py-2" src={{category.image}} alt={{category.name}} />
                <a class="overlay" href="http://127.0.0.1:8000/products?filter={{category.id}}">
                    <div class="text">{{category.name}}</div>
                </a>
            </div>
        {% endfor %}
        </article>
    </section>
    
</main>
<style>
 
</style>
{% endblock %}
